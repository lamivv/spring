<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.board.mapper.BoardMapper">
	<select id="getList" resultType="com.yedam.board.service.BoardVO">
		select * from tbl_board where bno > 0
	</select>

	<select id="findAll" resultType="com.yedam.board.service.BoardVO" parameterType="com.yedam.board.service.BoardVO">
		select * from tbl_board
		<where>
			<if test="title != null">and title = #{title}</if>
			<if test="writer != null">and writer = #{writer}</if>
			<if test="content != null">and content = #{content}</if> 
		</where>
	</select>

	<select id="findById" resultType="com.yedam.board.service.BoardVO" parameterType="int">
		select *
		from tbl_board
		where bno = #{bno}
	</select>

	<insert id="insert" parameterType="com.yedam.board.service.BoardVO">
		insert into tbl_board (BNO,
								TITLE,
								CONTENT,
								WRITER)
		values( seq_board.nextval,
				#{title},
				#{content},
				#{writer})
	</insert> 
	
	<update id="update" parameterType="com.yedam.board.service.BoardVO">
		update tbl_board
		set TITLE = #{title},
		content = #{content},
		writer = #{writer},
		updateDate = sysdate
		where BNO = #{bno}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from tbl_board
		where bno = #{value}
	</delete>
</mapper>