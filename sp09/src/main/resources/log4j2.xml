<?xml version="1.0" encoding="UTF-8"?> 
<Configuration status="WARN"> 
 
<Appenders> 
  <Console name="Console" target="SYSTEM_OUT"> 
    <PatternLayout pattern="%d{HH:mm:ss} %-5level %c %M (%L) - %m%n" /> 
  </Console> 
</Appenders> 
 
<Loggers> 
  <!-- INFO 로그들 --> 
  <Logger name="org.stringframework.web" level="debug" additivity="false"> 
    <AppenderRef ref="Console" /> 
  </Logger> 
 
  <Root level="info"> 
    <AppenderRef ref="Console" /> 
  </Root> 
</Loggers> 
</Configuration> 